{% extends 'base.jinja2' %}
{% block content %}
  <div class="card mt-5">
    <div class="card-header">
      {{ customer_record.first_name }} {{ customer_record.last_name }}
    </div>
    <div class="card-body">
      <p class="card-text">
        <strong>Email:</strong> {{ customer_record.email }}<br />
        <strong>Address:</strong> {{ customer_record.address }}<br />
        <strong>City:</strong> {{ customer_record.city }}<br />
        <strong>State:</strong> {{ customer_record.state }}<br />
        <strong>Zipcode:</strong> {{ customer_record.zipcode }}<br />
        <strong>Created At:</strong> {{ customer_record.created_at }}<br />
        <strong>ID:</strong> {{ customer_record.id }}<br />
      </p>
    </div>
  </div>
  <br /><br />
  <a href="{% url "home" %}" class="btn btn-secondary">Back</a>
  <a href="{% url "delete_record" customer_record.id %}" class="btn btn-danger"
    >Delete</a
  >
  <a
    href="{% url "update_record" customer_record.id %}"
    class="btn btn-secondary"
    >Update Record</a
  >
{% endblock content %}
